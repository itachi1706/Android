<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:padding="5dip" >

    <!-- android:layout_height="?android:attr/listPreferredItemHeight" -->


    <!-- Item Name -->

    <TextView
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bottomtext"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textStyle="bold" />

    <!-- Description Tag -->


    <!-- This is the actual description -->

    <TextView
        android:id="@+id/desctext"
        android:layout_width="150dip"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/bottomtext"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/middletextdata"
        android:layout_width="90dip"
        android:layout_height="20dip"
        android:layout_above="@+id/desctext"
        android:layout_alignLeft="@+id/desctext"
        android:layout_below="@+id/toptext"
        android:layout_toLeftOf="@+id/bottomtext"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="@string/default_server_list_get"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/bottomtext"
        android:layout_width="90dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:singleLine="false"
        android:text="@string/default_server_player_wait"
        android:textColor="#AAAAAA"
        android:textStyle="bold" />

</RelativeLayout>