<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itachi1706.minecrafttools.SingleServerChecker.ServerChecker17Fragment">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvInfo"
        android:layout_alignStart="@+id/tvInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/serverAddressAdd"
        android:layout_alignEnd="@+id/serverAddressAdd"
        android:layout_below="@+id/btnSubmit" />

    <EditText
        android:id="@+id/serverAddressAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/hint_SS_Info"
        android:inputType="textNoSuggestions|textUri" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/serverAddressAdd"
        android:layout_alignStart="@+id/serverAddressAdd"
        android:layout_below="@+id/serverAddressAdd"
        android:text="@string/txt_SS_Info" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfo"
        android:layout_centerHorizontal="true"
        android:text="@string/btnSubmit" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/pbUpdateRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:indeterminate="true"
        android:visibility="gone" />

</RelativeLayout>
